@model PagedList.IPagedList<The_NewYork_Time.Models.Article>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Main_Layout.cshtml";
}

<!-- Content Wrapper -->
<div id="content-wrapper" class="d-flex flex-column">

    <!-- Main Content -->
    <div id="content">

        <!-- Topbar -->
        @Html.Partial("_NavAdmin")
        <!-- End of Topbar -->
        <!-- Begin Page Content -->
        <div class="container-fluid">

            <!-- Page Heading -->
            <h1 class="h3 mb-2 text-gray-800">Article</h1>
            <p>
                @Html.ActionLink("Create New", "Create")
            </p>

            @using (Html.BeginForm())
            {
                <p>
                    Find by name: @Html.TextBox("SearchString")
                    <input type="submit" value="Search" />
                </p>
            }

            <!-- DataTales Example -->
            <div class="card shadow mb-4">

                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">

                            <thead>
                                <tr>
                                    
                                    
                                    <th>
                                        @Html.ActionLink("CategoryName", "Index", new { sortOrder = ViewBag.TenSortParm })
                                    </th>
                                    <th>
                                        @Html.ActionLink(" Date", "Index", new { sortOrder = ViewBag.DateSortParm })
                                    </th>
                                    <th>
                                        articlename
                                    </th>
                                    <th>
                                        description
                                    </th>
                                    <th>
                                        image1
                                    </th>
                                    <th>
                                        image2
                                    </th>
                                    <th>
                                        image3
                                    </th>
                                    <th>
                                        image4a
                                    </th>
                                    <th>
                                        image4b
                                    </th>
                                    <th>
                                        image5
                                    </th>
                                    <th>
                                        content1
                                    </th>
                                    <th>
                                        content2
                                    </th>
                                    <th>
                                        content3
                                    </th>
                                    <th>
                                        content4
                                    </th>
                                    <th>
                                        content5
                                    </th>
                                    <th>
                                        author
                                    </th>
                                    
                                    <th> Option</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Cetegory.categoryname)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.date)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.articlename)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.description)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.image1)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.image2)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.image3)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.image4a)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.image4b)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.image5)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.content1)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.content2)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.content3)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.content4)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.content5)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.author)
                                    </td>

                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.idarticle }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.idarticle }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.idarticle })
                                    </td>
                                </tr>
                                }




                            </tbody>
                        </table>
                        <br />
                        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

                        @Html.PagedListPager(Model, page => Url.Action("Index",
                            new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
                    </div>
                </div>
            </div>

        </div>
        <!-- /.container-fluid -->

    </div>
    <!-- End of Main Content -->
    <!-- Footer -->
    <footer class="sticky-footer bg-white">
        <div class="container my-auto">
            <div class="copyright text-center my-auto">
                <span>Copyright &copy; Your Website 2020</span>
            </div>
        </div>
    </footer>
    <!-- End of Footer -->

</div>



