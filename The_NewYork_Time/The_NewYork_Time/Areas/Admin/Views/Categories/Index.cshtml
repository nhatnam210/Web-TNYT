@model IEnumerable<The_NewYork_Time.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/_MainLayoutAdmin.cshtml";
}



<h1 class="h3 mb-2 text-gray-800">Manage Categories</h1>

<p>
    @Html.ActionLink("Create New", "Create")
</p>


<!-- DataTales Example -->
<div class="card shadow mb-4">

    <div class="card-body">
        <div style="margin-left: 50px" class="table-responsive">
            <table class="table table-bordered" id="dataTable" style="width:500px ; margin-left: -10px" cellspacing="0">

                <thead>
                    <tr>
                        <th> @Html.DisplayNameFor(model => model.Section.sectionname)</th>

                        <th> @Html.DisplayNameFor(model => model.categoryname)</th>

                        <th style="text-align: center">Tùy chọn</th>
                    </tr>
                </thead>

                <tbody>

                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Section.sectionname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.categoryname)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.idcategory }) |
                            @Html.ActionLink("Details", "Details", new { id = item.idcategory }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.idcategory })
                        </td>
                    </tr>
                    }

                </tbody>

            </table>

        </div>
    </div>
</div>

