@model The_NewYork_Time.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}


<div class="container">
    <div class="login-form">
        <p  class="register-title">Register account</p>
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "login-text__red " })

            <div class="input-box edit">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-3 control-label login-text" })
                @Html.TextBoxFor(m => m.Email, new { @id = "email" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger login-text" })
               



            </div>


            <div class="input-box inp-pass">
                @Html.LabelFor(m => m.Password, new { @class = "col-md-3 control-label login-text" })
                @Html.PasswordFor(m => m.Password, new { @id = "password" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger login-text" })
            </div>
            <div class="input-box inp-pass">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-3 control-label login-text" })
                @Html.PasswordFor(m => m.ConfirmPassword, new { @id = "password" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger login-text" })
            </div>



            <div class="input-box button-box">
                <button type="submit" id="continue" class="btn-login">Register</button>
            </div>

            <div class="lineor">
            </div>

            <div class="access">


                <div class="service">
                    <p class="login-text" style="font-family: 'Noto Sans HK', sans-serif; font-weight: 700;">
                        By continuing, you agree to the <a href="">Terms of Service</a> and acknowledge our <a href="">Privacy Policy</a> .
                    </p>
                </div>


                <!-- <div class="contact">
                <a href=""><i class="fab fa-google"></i> Continue with Google</a>
            </div>
            <div class="contact">
                <a href=""><i class="fab fa-facebook-square"></i> Continue with Facebook</a>
            </div>
            <div class="contact">
                <a href=""><i class="ti-youtube"></i> Continue with Apple</a>
            </div> -->

            </div>

        }
    </div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
