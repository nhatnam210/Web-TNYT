@section scripts{
    <script>
        $(document).ready(function () {
            $(".js-tongle-attendance").click(function (e) {
                var button = $(e.target);
                $.post("/api/storages", { Id: button.attr("data-course-id") })
                    .done(function (result) {
                        if (result == "cancel") {
                            alert("Remove from your storage Successfully !")
                            button
                                .removeClass("btn-success")
                                .addClass("btn-default")
                                .text("Save");
                        } else {
                            alert("Save to your storage Successfully !!!!!!")
                            button
                                .removeClass("btn-default")
                                .addClass("btn-success")
                                .text("Saved");
                        }
                    }).fail(function () {
                        alert("Error 505!");
                    });
            });
        });
    </script>
