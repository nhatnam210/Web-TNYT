@model IEnumerable<The_NewYork_Time.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Section.sectionname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.categoryname)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Section.sectionname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.categoryname)
        </td>
        <td>
            |
            @Html.ActionLink("Details", "Details", new { id=item.idcategory }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.idcategory })
        </td>
    </tr>
}

</table>
