@model IEnumerable<The_NewYork_Time.Models.Article>
<div class="container-fluid paper-border-top ">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3 paper-border-right">
                <div class="paper ">
                    <div class="paper-body">
                        <h5 class="title-paper"><a class="text-decoration-none text-dark" href="@Url.Action("Article","Categories" ,new { id =item.Id})">@item.articlename</a></h5>
                        <p class="paper-item-abstract"><a class="text-decoration-none text-black-50" href="@Url.Action("Article","Categories" ,new { id =item.Id})">@item.description</a>
                    </div>
                </div>
            </div>
        }


    </div>
</div>